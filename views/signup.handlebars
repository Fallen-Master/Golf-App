  <div class="card w-50 p-3 d-flex justify-content-center">
        <h2 class="card-header">Enter username and password to sign up</h2>
        <form id="signup-form" class="card-body">
            <div class="mb-6">
                <label for="username" class="form-label">Username</label>
                <input placeholder="Enter username" type="text" class="form-control" id="username-signup">
                <div id="usernameHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
    
            <div class="mb-6">
                <label for="password" class="form-label">Password</label>
                <input placeholder="Enter password" type="password" class="form-control" id="password-signup">
                <div id="passwordHelp" class="form-text">Must be 4 digits long.</div>
            </div>
            <button type="submit" class="btn btn-primary" id="signin-btn">Sign Up</button>
        </form>
    </div>
    <script src="/js/signup.js"></script>